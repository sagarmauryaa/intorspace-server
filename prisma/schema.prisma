generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model admin {
  id           Int      @id @default(autoincrement())
  admin_id     String
  profileImage String
  name         String   @db.VarChar(150)
  email        String   @unique @db.VarChar(150)
  phone        String   @db.VarChar(150)
  password     String   @db.VarChar(255)
  created_on   DateTime @default(now())
  updated_on   DateTime @default(now()) @db.Timestamp(0)
}

model legal_pages {
  id      Int    @unique(map: "id") @default(autoincrement())
  slug    String @unique @db.VarChar(255)
  title   String @db.VarChar(255)
  content String @db.LongText
}

model site_faqs {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
}

model site_feedback {
  id         Int      @unique(map: "id") @default(autoincrement())
  name       String   @db.VarChar(500)
  email      String   @db.VarChar(500)
  phone      String   @db.VarChar(10)
  feedback   String   @db.VarChar(1000)
  created_on DateTime @default(now()) @db.Date
}

model category {
  id             Int              @id @default(autoincrement())
  name           String           @db.VarChar(255)
  image          String
  created_on     DateTime         @default(now()) @db.Date
  subcategory    subcategory[]
  subsubcategory subsubcategory[]
}

model subcategory {
  id             Int              @id @default(autoincrement())
  cat_id         Int
  name           String           @db.VarChar(255)
  image          String
  created_on     DateTime         @default(now()) @db.Date
  category       category         @relation(fields: [cat_id], references: [id])
  subsubcategory subsubcategory[]

  @@index([cat_id], map: "subcategory_cat_id_fkey")
}

model subsubcategory {
  id          Int         @id @default(autoincrement())
  cat_id      Int
  sub_cat_id  Int
  name        String      @db.VarChar(255)
  image       String
  created_on  DateTime    @default(now()) @db.Date
  category    category    @relation(fields: [cat_id], references: [id])
  subcategory subcategory @relation(fields: [sub_cat_id], references: [id])

  @@index([cat_id], map: "sub_sub_categories_cat_id_fkey")
  @@index([sub_cat_id], map: "sub_sub_categories_sub_cat_id_fkey")
}
