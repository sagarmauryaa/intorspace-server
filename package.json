{
	"name": "server",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"start": "node ./dist/index.js",
		"watch": "tsc -w",
		"build": "concurrently \"tsc\" \"npm run copy-files\" ",
		"server": "nodemon ./dist/index.js",
		"dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run watch-views\"",
		"copy-files": "copyfiles -u 1 \"src/views/**/*\" dist/",
		"watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@prisma/client": "^5.19.1",
		"@types/jsonwebtoken": "^9.0.6",
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.10",
		"express": "^4.21.0",
		"jsonwebtoken": "^9.0.2",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.9.15",
		"prisma": "^5.19.1",
		"winston": "^3.14.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"concurrently": "^9.0.1",
		"copyfiles": "^2.4.1",
		"nodemon": "^3.1.4",
		"typescript": "^5.6.2"
	}
}
